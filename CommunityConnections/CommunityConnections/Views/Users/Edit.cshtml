@model CommunityConnections.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mt-5 display-4">@ChooseUser.SelectedUsername</h1>

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <form asp-action="Edit">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row" style="margin-bottom: 15px;">
                    <label asp-for="UserName" class="control-label col-md-4 h4">Username</label>
                    <div class="col-md-8">
                        <input asp-for="UserName" class="form-control text-center" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row" style="margin-bottom: 15px;">
                    <label asp-for="Password" class="control-label col-md-4 h4">Password</label>
                    <div class="col-md-8">
                        <input asp-for="Password" class="form-control text-center" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row" style="margin-bottom: 15px;">
                    <label asp-for="Email" class="control-label col-md-4 h4">Email</label>
                    <div class="col-md-8">
                        <input asp-for="Email" class="form-control text-center" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row" style="margin-bottom: 15px;">
                    <label asp-for="FirstName" class="control-label col-md-4 h4">First Name</label>
                    <div class="col-md-8">
                        <input asp-for="FirstName" class="form-control text-center" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row" style="margin-bottom: 15px;">
                    <label asp-for="LastName" class="control-label col-md-4 h4">Last Name</label>
                    <div class="col-md-8">
                        <input asp-for="LastName" class="form-control text-center" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row" style="margin-bottom: 15px;">
                    <label asp-for="PhoneNumber" class="control-label col-md-4 h4">Phone Number</label>
                    <div class="col-md-8">
                        <input asp-for="PhoneNumber" class="form-control text-center" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row" style="margin-bottom: 15px;">
                    <label asp-for="AuthQuestion" class="control-label col-md-4 h4">Authorization Question</label>
                    <div class="col-md-8">
                        <input asp-for="AuthQuestion" class="form-control text-center" readonly />
                        <span asp-validation-for="AuthQuestion" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row" style="margin-bottom: 15px;">
                    <label asp-for="AuthAnswer" class="control-label col-md-4 h4">Authorization Answer</label>
                    <div class="col-md-8">
                        <input asp-for="AuthAnswer" class="form-control text-center" />
                        <span asp-validation-for="AuthAnswer" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group text-center" style="margin-bottom: 15px;">
                    <input type="submit" value="Save Changes" class="btn btn-primary" style="width: 100%; font-size: large" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}