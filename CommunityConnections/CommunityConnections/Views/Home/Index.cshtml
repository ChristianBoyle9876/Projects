@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-center mt-5 display-4">Login</h1>

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <form method="post" asp-action="SetGlobalUsername">

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger text-center" role="alert" style="margin-bottom: 15px;">
                        @ViewBag.ErrorMessage
                    </div>
                }

                <div class="form-group text-center" style="margin-bottom: 15px;">
                    <label for="selectedUsername" class="form-label" style="font-size: 20px; text-align: center;">Enter Username</label>
                    <input type="text" class="form-control text-center" id="selectedUsername" name="selectedUsername" autocomplete="off" required>
                </div>

                <div class="form-group text-center" style="margin-bottom: 25px;">
                    <label for="password" class="form-label" style="font-size: 20px; text-align: center;">Enter Password</label>
                    <input type="password" class="form-control text-center" id="password" name="password" autocomplete="new-password" required>
                </div>

                <div class="form-group text-center" style="margin-bottom: 15px;">
                    <input type="submit" value="Login" class="btn btn-primary" style="width: 100%; font-size: large" />
                </div>

                <div class="text-center">
                    <p>If you do not have an account, <a asp-area="" asp-controller="Users" asp-action="Create">click here to register!</a></p>
                </div>
            </form>
        </div>
    </div>
</div>