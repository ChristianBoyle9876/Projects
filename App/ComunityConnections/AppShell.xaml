<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ComunityConnections.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ComunityConnections"
    xmlns:views="clr-namespace:ComunityConnections.Views"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem FlyoutDisplayOptions="AsSingleItem">

        <ShellContent
        Title="Home"
        NavigationPage.HasNavigationBar="False"
        
        FlyoutItemIsVisible="False"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <!--<ShellContent
        Title="createAlert"
        ContentTemplate="{DataTemplate views:CreateAlert}"
        Route="createAlert"/>-->

        <!--<ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate views:RegisterPage}"
        Route="RegisterPage"/>-->


        <ShellContent
        Title="ShowAlert"
        ContentTemplate="{DataTemplate views:ShowAlerts}"
        Route="showAlerts"/>

        <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate views:ProfileVerification}"
        Route="ProfileVerification"/>

    </FlyoutItem>
</Shell>
