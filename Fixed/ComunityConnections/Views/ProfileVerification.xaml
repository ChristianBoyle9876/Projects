<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComunityConnections.Views.ProfileVerification"
             Title="ProfileVerification"
             BackgroundColor="#18253d">

    <ScrollView>
        <StackLayout Padding="30" VerticalOptions="CenterAndExpand">

            <Label x:Name="QuestionLabel" SemanticProperties.HeadingLevel="Level1" FontSize="32" TextColor="White" HorizontalOptions="Center" Margin="0,0,0,10"/>

            <Entry x:Name="answerEntry" HorizontalOptions="Center" WidthRequest="200" TextColor="White" Margin="0,0,0,10"/>

            <Button Text="Submit" Pressed="Button_Pressed" FontSize="20" BackgroundColor="#64676e" TextColor="White" HorizontalOptions="Center" WidthRequest="150" Margin="0,20,0,0"/>

        </StackLayout>
    </ScrollView>
</ContentPage>
